{
  "name": "eclipse-epsilon-languages",
  "displayName": "Eclipse Epsilon Languages",
  "description": "Syntax highlighting for the Eclipse Epsilon languages and Emfatic",
  "publisher": "SamHarris",
  "version": "2.0.0",
  "icon": "images/epsilon-logo-sphere.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "eclipse",
    "epsilon",
    "emfatic",
    "emf",
    "mde"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main/extension.js",
  "browser": "./out/web/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arkaedan/vscode-epsilon.git"
  },
  "contributes": {
    "languages": [
      {
        "id": "eol",
        "aliases": [
          "Epsilon Object Language",
          "EOL",
          "eol"
        ],
        "extensions": [
          ".eol"
        ],
        "icon": {
          "light": "./images/light/eol.svg",
          "dark": "./images/dark/eol.svg"
        },
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "ecl",
        "aliases": [
          "Epsilon Comparison Language",
          "ECL",
          "ecl"
        ],
        "extensions": [
          ".ecl"
        ],
        "icon": {
          "light": "./images/light/ecl.svg",
          "dark": "./images/dark/ecl.svg"
        },
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "egl",
        "aliases": [
          "Epsilon Generation Language",
          "EGL",
          "egl"
        ],
        "extensions": [
          ".egl"
        ],
        "icon": {
          "light": "./images/light/egl.svg",
          "dark": "./images/dark/egl.svg"
        },
        "configuration": "./language-configurations/egl.language-configuration.json"
      },
      {
        "id": "egx",
        "aliases": [
          "EGL Co-Ordination Language",
          "EGX",
          "egx"
        ],
        "extensions": [
          ".egx"
        ],
        "icon": {
          "light": "./images/light/egx.svg",
          "dark": "./images/dark/egx.svg"
        },
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "evl",
        "aliases": [
          "Epsilon Validation Language",
          "EVL",
          "evl"
        ],
        "extensions": [
          ".evl"
        ],
        "icon": {
          "light": "./images/light/evl.svg",
          "dark": "./images/dark/evl.svg"
        },
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "etl",
        "aliases": [
          "Epsilon Transformation Language",
          "ETL",
          "etl"
        ],
        "extensions": [
          ".etl"
        ],
        "icon": {
          "light": "./images/light/etl.svg",
          "dark": "./images/dark/etl.svg"
        },
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "eml",
        "aliases": [
          "Epsilon Merging Language",
          "EML",
          "eml"
        ],
        "extensions": [
          ".eml"
        ],
        "icon": {
          "light": "./images/light/eml.svg",
          "dark": "./images/dark/eml.svg"
        },
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "epl",
        "aliases": [
          "Epsilon Pattern Language",
          "EPL",
          "epl"
        ],
        "extensions": [
          ".epl"
        ],
        "icon": {
          "light": "./images/light/epl.svg",
          "dark": "./images/dark/epl.svg"
        },
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "flock",
        "aliases": [
          "Epsilon Flock",
          "Flock",
          "flock"
        ],
        "extensions": [
          ".mig"
        ],
        "icon": {
          "light": "./images/light/flock.svg",
          "dark": "./images/dark/flock.svg"
        },
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "pinset",
        "aliases": [
          "Epsilon Pinset",
          "Pinset",
          "pinset"
        ],
        "icon": {
          "light": "./images/light/pinset.svg",
          "dark": "./images/dark/pinset.svg"
        },
        "extensions": [
          ".pinset"
        ],
        "configuration": "./language-configurations/eol.language-configuration.json"
      },
      {
        "id": "emfatic",
        "aliases": [
          "Emfatic",
          "emfatic"
        ],
        "icon": {
          "light": "./images/light/emfatic.svg",
          "dark": "./images/dark/emfatic.svg"
        },
        "extensions": [
          ".emf"
        ],
        "configuration": "./language-configurations/emfatic.language-configuration.json"
      },
      {
        "id": "flexmi-yaml",
        "aliases": [
          "Flexmi (YAML)",
          "flexmi-yaml"
        ],
        "extensions": [
          ".flexmi"
        ],
        "icon": {
          "light": "./images/light/flexmi-yaml.svg",
          "dark": "./images/dark/flexmi.svg"
        },
        "configuration": "./language-configurations/flexmi-yaml.language-configuration.json"
      },
      {
        "id": "flexmi-xml",
        "aliases": [
          "Flexmi (XML)",
          "flexmi-xml"
        ],
        "extensions": [
          ".flexmi"
        ],
        "icon": {
          "light": "./images/light/flexmi-xml.svg",
          "dark": "./images/dark/flexmi-xml.svg"
        },
        "configuration": "./language-configurations/flexmi-xml.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "eol",
        "scopeName": "source.epsilon.eol",
        "path": "./syntaxes/eol.tmlanguage"
      },
      {
        "language": "ecl",
        "scopeName": "source.epsilon.ecl",
        "path": "./syntaxes/ecl.tmlanguage"
      },
      {
        "language": "egl",
        "scopeName": "source.epsilon.egl",
        "path": "./syntaxes/egl.tmlanguage"
      },
      {
        "language": "egx",
        "scopeName": "source.epsilon.egx",
        "path": "./syntaxes/egx.tmlanguage"
      },
      {
        "language": "evl",
        "scopeName": "source.epsilon.evl",
        "path": "./syntaxes/evl.tmlanguage"
      },
      {
        "language": "etl",
        "scopeName": "source.epsilon.etl",
        "path": "./syntaxes/etl.tmlanguage"
      },
      {
        "language": "eml",
        "scopeName": "source.epsilon.eml",
        "path": "./syntaxes/eml.tmlanguage"
      },
      {
        "language": "epl",
        "scopeName": "source.epsilon.epl",
        "path": "./syntaxes/epl.tmlanguage"
      },
      {
        "language": "flock",
        "scopeName": "source.epsilon.flock",
        "path": "./syntaxes/flock.tmlanguage"
      },
      {
        "language": "pinset",
        "scopeName": "source.epsilon.pinset",
        "path": "./syntaxes/pinset.tmlanguage"
      },
      {
        "language": "emfatic",
        "scopeName": "source.emfatic",
        "path": "./syntaxes/emfatic.tmlanguage"
      },
      {
        "language": "flexmi-xml",
        "scopeName": "source.epsilon.flexmi",
        "path": "./syntaxes/flexmi-xml.tmlanguage"
      },
      {
        "language": "flexmi-yaml",
        "scopeName": "source.epsilon.flexmi.yaml",
        "path": "./syntaxes/flexmi-yaml.tmlanguage"
      }
    ],
    "commands": [
      {
        "command": "epsilon.newEgxEglPair",
        "title": "New EGX/EGL Pair",
        "category": "Epsilon"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "epsilon.newEgxEglPair",
          "when": "config.epsilon.enableNewEgxEglPairContextMenuItem",
          "group": "navigation@8"
        }
      ]
    },
    "configuration": {
      "title": "Epsilon",
      "properties": {
        "epsilon.enableNewEgxEglPairContextMenuItem": {
          "description": "Enable the New EGX/EGL Pair command in the Explorer context menu.",
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run esbuild && npm run web-esbuild",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/main/extension.ts --bundle --outfile=out/main/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "web-esbuild-base": "esbuild ./src/web/extension.ts --bundle --outfile=out/web/extension.js --external:vscode --format=cjs --platform=node",
    "web-esbuild": "npm run web-esbuild-base -- --sourcemap",
    "web-esbuild-watch": "npm run web-esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "esbuild": "^0.19.5",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-test": "^1.4.0"
  }
}
